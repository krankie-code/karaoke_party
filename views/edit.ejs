<!DOCTYPE html>
<html>
  <head>
    <% include ../views/partials/head.ejs %>
  </head>
<body id="edit">
  <header>
    <% include ../views/partials/header.ejs %>
  </header>
  <div class="rooms-container">
    <h3>Edit Room</h3>
    <form action="/rooms/<%= room.id %>" method="POST">
      <label id="text" for="name"><strong>Room Name:</strong></label>
      <input type="text" name="name" id="name" value="<%= room.name %>" placeholder="Room Name">
      <br>
      <input type="hidden" name="_method" value="PUT"/>
      <button class="btn">Update</button>
    </form>
    <br>
    <a href="/rooms" class="nav-links">Return to Index</a>
  </div>
  <footer>
    <% include ../views/partials/footer.ejs %>
  </footer>
</body>
</html>
